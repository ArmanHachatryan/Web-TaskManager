@{
    ViewData["Title"] = "Изменение данных";
}
<h2>Форма изменения данных</h2>
 
<form method="post" role="form">
    <input type="hidden" value="@ViewBag.TaskId" name="TaskId" />
    <p>Для оформления изменения введите данные</p>
    <div class="form-group">
        <label for="Status" class="col-md-2 control-label">Статус:</label>
        <div class="col-md-4">
                  <select class="custom-select mr-sm-2" name="Status">
                    <option selected>Выберите...</option>
                    <option value="Выполнять">Выполнять</option>
                    <option value="Остановить">Остановить</option>
                    <option value="Завершить">Завершить</option>
                 </select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-10">
            <input type="submit" class="btn btn-primary" value="Отправить" />
        </div>
    </div>
</form>
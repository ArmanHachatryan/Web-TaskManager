@model IEnumerable<TaskManagerWeb.Models.Task>
@{
	ViewData["Title"] = "Главная";
}

<form method="post" class="form-horizontal" role="form">
	<div class="form-group">
		<label for="Name" class="col-md-2 control-label">Название вашей задачи:</label>
		<div class="col-md-4">
			<input type="text" name="Name" class="form-control" placeholder="Например: сделать уборку" />
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-offset-2 col-md-10">
			<input type="submit" class="btn btn-primary" value="Отправить" />
		</div>
	</div>
</form>

<h3>Задачи</h3>
<table class="table demotable">
	<tr>
		<td>Название задачи</td>
		<td>Статус</td>
		<td>Затраченное время</td>
	</tr>
	@foreach (var task in Model)
	{
		<tr>
			<td>@task.Name</td>
			@*<td>@task.Status.DivplayValue</td>*@
			<td>@task.DateTime</td>
			<td><a href="~/Home/Change/@task.Id">Изменить</a></td>
			<td>			
				<form method="post" asp-action="delete" >
				<input type="hidden" value="@task.Id"  name="id" />
				<input type="submit" class="button btn btn-default" value="Удалить" />
				</form>
			</td>

		</tr>

	}
</table>